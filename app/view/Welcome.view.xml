<mvc:View
	controllerName="view.Welcome"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" >
	<Page
	id="welcomePage"
	showHeader="false"
	enableScrolling="false" >
	<TileContainer
	  id="container"
	  tileDelete="handleTileDelete"
	  tiles="{/TileCollection}">
	  <StandardTile
	    icon="sap-icon://{icon}"
	    type="{type}"
	    number="{number}"
	    numberUnit="{numberUnit}"
	    title="{title}"
	    info="{info}"
	    infoState="{infoState}" />
	</TileContainer>
	</Page>
</mvc:View>